{
  "name": "saga-demo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "server:watch": "nodemon",
    "server:run": "ts-node --project server/tsconfig.json server/index.ts",
    "next:dev": "next dev",
    "next:start": "next start",
    "dev": "run-p -l server:watch next:dev",
    "debug": "DEBUG=true run-p -l server:watch next:dev",
    "build": "next build",
    "start": "run-p -l server:run next:start",
    "lint": "eslint . --cache --ext js,ts,ts,tsx --ignore-pattern .eslintrc.js",
    "lint:fix": "yarn lint --fix",
    "format": "npx prettier --config .prettierrc.yaml \"**/*.{js,jsx,ts,tsx,md}\" --write",
    "format:test": "npx prettier --config .prettierrc.yaml \"**/*.{js,jsx,ts,tsx,md}\" -l",
    "test": "jest",
    "tsc": "tsc",
    "verify": "run-p -l format:test lint tsc"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "server"
    ],
    "exec": "yarn server:run",
    "ext": "ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "//lint-staged-comment": "This configuration doesn't work w/ files with brackets in filenames. See lint-staged.config.js.",
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "yarn lint"
    ],
    "**/*.{css,scss,js,jsx,ts,tsx,md}": [
      "prettier --config .prettierrc.yaml --write"
    ]
  },
  "dependencies": {
    "@apollo/react-hooks": "^3.1.3",
    "@reduxjs/toolkit": "^1.2.5",
    "apollo-cache-inmemory": "^1.6.5",
    "apollo-client": "^2.6.8",
    "apollo-link": "^1.2.13",
    "apollo-link-rest": "0.7.3",
    "graphql": "^14.6.0",
    "graphql-anywhere": "^4.2.6",
    "graphql-tag": "^2.10.3",
    "next": "9.3.0",
    "node-fetch": "^2.6.0",
    "react": "16.13.0",
    "react-dom": "16.13.0",
    "react-spinners": "^0.8.1",
    "uuid": "^7.0.2"
  },
  "devDependencies": {
    "@apollo/react-testing": "^3.1.3",
    "@babel/core": "^7.8.7",
    "@testing-library/react": "^10.0.1",
    "@testing-library/react-hooks": "^3.2.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.3",
    "@types/jest": "^25.1.4",
    "@types/next": "^9.0.0",
    "@types/react": "^16.9.23",
    "@types/react-dom": "^16.9.5",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "babel-jest": "^25.1.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-eslint-comments": "^3.1.2",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.0",
    "express": "^4.17.1",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.8",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "react-test-renderer": "^16.13.0",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.3"
  }
}
